<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_app_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.trongdat.subject2review.AppTest">

    <Button
        android:id="@+id/btnApp1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:background="@drawable/button_background"
        android:onClick="clickHandler"
        android:text="App test 1"
        android:textColor="#fff" />

    <Button
        android:id="@+id/btnApp2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:background="@drawable/button_background"
        android:onClick="clickHandler"
        android:text="App test 2"
        android:textColor="#fff" />

    <Button
        android:id="@+id/btnApp3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:background="@drawable/button_background"
        android:onClick="clickHandler"
        android:text="App test 3"
        android:textColor="#fff" />
</LinearLayout>
