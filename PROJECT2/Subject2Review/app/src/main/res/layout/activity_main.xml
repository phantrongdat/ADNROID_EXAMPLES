<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="#e9f9dd"
    android:orientation="vertical"
    app:elevation="0dp"
    tools:context="com.trongdat.subject2review.MainActivity">

    <Button
        android:id="@+id/btnCanvas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:background="@drawable/button_background"
        android:onClick="clickHandler"
        android:text="Canvas Example"
        android:textColor="#fff" />

    <Button
        android:id="@+id/btnAnimation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:background="@drawable/button_background"
        android:onClick="clickHandler"
        android:text="Animation Example"
        android:textColor="#fff" />

    <Button
        android:id="@+id/btnAudio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:background="@drawable/button_background"
        android:onClick="clickHandler"
        android:text="Audio Example"
        android:textColor="#fff" />

    <Button
        android:id="@+id/btnVideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:background="@drawable/button_background"
        android:onClick="clickHandler"
        android:text="Video Example"
        android:textColor="#fff" />


    <Button
        android:id="@+id/btnAppTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:background="@drawable/button_background"
        android:onClick="clickHandler"
        android:text="APP TEST"
        android:textColor="#fff" />

</LinearLayout>
