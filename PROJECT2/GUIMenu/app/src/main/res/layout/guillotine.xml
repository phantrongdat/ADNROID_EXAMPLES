<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3d2c68"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        style="@style/Toolbar"
        app:contentInsetStart="0dp">

        <ImageView
            android:id="@+id/guillotine_hamburger"
            style="@style/ImageView.Hamburger"
            android:src="@drawable/ic_menu" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/profile_group"
        style="@style/LinearLayout.GuillotineItem"
        android:layout_marginTop="@dimen/guillotine_medium_margin">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/ic_profile" />

        <TextView
            style="@style/TextView.GuillotineItem.Selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home Cloud"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/feed_group"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/ic_feed" />

        <TextView
            style="@style/TextView.GuillotineItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Online music"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_group"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/ic_activity_active" />

        <TextView
            style="@style/TextView.GuillotineItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hot music"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_group4"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/ic_activity_active" />

        <TextView
            android:id="@+id/textView"
            style="@style/TextView.GuillotineItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Charts"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_group5"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/ic_activity_active" />

        <TextView
            style="@style/TextView.GuillotineItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top 100"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/settings_group"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/ic_settings" />

        <info.trongdat.guimenu.widget.CanaroTextView
            style="@style/TextView.GuillotineItem"
            android:text="Settings"
            android:id="@+id/canaroTextView" />
    </LinearLayout>
</LinearLayout>