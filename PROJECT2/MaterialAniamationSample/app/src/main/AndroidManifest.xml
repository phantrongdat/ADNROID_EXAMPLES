<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="info.trongdat.materialaniamationsample">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BlogTransitionActivity"
            android:label="Layout Transition"></activity>
        <activity
            android:name=".SearchWidgetActivity"
            android:label="@string/title_activity_search_widget"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"></activity>
        <activity
            android:name=".PlayPauseActivity"
            android:label="@string/title_activity_play_pause"></activity>
        <activity android:name=".PlayPause"></activity>
    </application>

</manifest>