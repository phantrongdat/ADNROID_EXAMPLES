<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <include layout="@layout/toolbar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="5dp"
        android:background="#c6edae"
        android:gravity="center"
        android:text="KHOA CÔNG NGHỆ THÔNG TIN - UTEHY"
        android:textColor="#f20000"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="6dp"
        android:weightSum="9">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="6dp"
            android:layout_weight="3"
            android:weightSum="10">

            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="6dp"
                android:layout_weight="5"
                android:background="#5c8ffc"
                android:drawableTop="@drawable/large_ic_audio"
                android:onClick="clickQLSV"
                android:text="QUẢN LÝ SINH VIÊN"
                android:textColor="#d62e00" />

            <Button
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:background="#64c266"
                android:drawableTop="@drawable/large_ic_attachment"
                android:text="QUẢN LÝ ĐIỂM"
                android:onClick="clickQLDiem"
                android:textColor="#d62e00" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="6dp"
            android:layout_weight="3"
            android:weightSum="10">

            <Button
                android:id="@+id/button8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="6dp"
                android:layout_weight="5"
                android:onClick="clickQLLop"
                android:background="#f9e480"
                android:drawableTop="@drawable/large_ic_camera"
                android:text="QUẢN LÝ LỚP"
                android:textColor="#d62e00" />

            <Button
                android:id="@+id/button9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:background="#c98cff"
                android:drawableTop="@drawable/large_ic_compose"
                android:text="QUẢN LÝ MÔN HỌC"
                android:onClick="clickQLMH"
                android:textColor="#d62e00" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:weightSum="10">

            <Button
                android:id="@+id/button10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="6dp"
                android:layout_weight="5"
                android:background="#b6f57d"
                android:drawableTop="@drawable/large_ic_handwriting"
                android:text="THỐNG KÊ"
                android:onClick="clickThongKe"
                android:textColor="#d62e00" />

            <Button
                android:id="@+id/button11"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:background="#e2a042"
                android:drawableTop="@drawable/large_ic_text"
                android:text="TÌM KIẾM"
                android:onClick="clickTimKiem"
                android:textColor="#d62e00" />
        </TableRow>
    </LinearLayout>

</LinearLayout>
